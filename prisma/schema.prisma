generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum UserRole {
  ADMIN
  EDITOR
  REVIEWER
  AUTHOR
}

enum SubmissionStatus {
  DRAFT
  SUBMITTED
  UNDER_REVIEW
  REVISION_REQUIRED
  ACCEPTED
  REJECTED
  PUBLISHED
}

enum ReviewRecommendation {
  ACCEPT
  MINOR_REVISION
  MAJOR_REVISION
  REJECT
}

model User {
  id              String       @id @default(cuid())
  email           String       @unique
  name            String
  passwordHash    String
  role            UserRole     @default(AUTHOR)
  emailVerified   DateTime?
  image           String?
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  submissions     Submission[] @relation("AuthorSubmissions")
  reviews         Review[]
  managedJournals Journal[]    @relation("JournalEditor")
  decisionsMade   EditorialDecision[]
  announcementsCreated Announcement[] @relation("AnnouncementAuthor")
  accounts        Account[]
  sessions        Session[]
}

model Journal {
  id           String       @id @default(cuid())
  name         String
  slug         String       @unique
  description  String?
  issn         String?
  editorId     String
  editor       User         @relation("JournalEditor", fields: [editorId], references: [id])
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  submissions  Submission[]
  issues       Issue[]
  announcements Announcement[]
}

model Announcement {
  id          String   @id @default(cuid())
  journalId   String
  createdById String
  title       String
  content     String
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  journal   Journal @relation(fields: [journalId], references: [id], onDelete: Cascade)
  createdBy User    @relation("AnnouncementAuthor", fields: [createdById], references: [id], onDelete: Cascade)

  @@index([journalId, publishedAt])
  @@index([createdAt])
}

model Submission {
  id             String            @id @default(cuid())
  journalId      String
  authorId       String
  issueId        String?
  title          String
  abstract       String
  keywords       String[]
  manuscriptUrl  String?
  status         SubmissionStatus  @default(DRAFT)
  submittedAt    DateTime?
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt
  journal        Journal           @relation(fields: [journalId], references: [id])
  author         User              @relation("AuthorSubmissions", fields: [authorId], references: [id])
  issue          Issue?            @relation(fields: [issueId], references: [id], onDelete: SetNull)
  reviews        Review[]
  decisions      EditorialDecision[]
}

model Issue {
  id          String       @id @default(cuid())
  journalId   String
  volume      Int
  issueNumber Int
  year        Int
  title       String?
  publishedAt DateTime?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  journal     Journal      @relation(fields: [journalId], references: [id], onDelete: Cascade)
  submissions Submission[]

  @@unique([journalId, volume, issueNumber, year])
  @@index([journalId, publishedAt])
}

model EditorialDecision {
  id            String           @id @default(cuid())
  submissionId  String
  decidedById   String
  status        SubmissionStatus
  notes         String?
  decidedAt     DateTime         @default(now())
  createdAt     DateTime         @default(now())

  submission Submission @relation(fields: [submissionId], references: [id], onDelete: Cascade)
  decidedBy  User       @relation(fields: [decidedById], references: [id], onDelete: Cascade)

  @@index([submissionId, decidedAt])
}

model Review {
  id              String                @id @default(cuid())
  submissionId    String
  reviewerId      String
  commentsToAuthor String?
  commentsToEditor String?
  recommendation  ReviewRecommendation?
  score           Int?
  submittedAt     DateTime?
  createdAt       DateTime              @default(now())
  updatedAt       DateTime              @updatedAt
  submission      Submission            @relation(fields: [submissionId], references: [id])
  reviewer        User                  @relation(fields: [reviewerId], references: [id])

  @@unique([submissionId, reviewerId])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
